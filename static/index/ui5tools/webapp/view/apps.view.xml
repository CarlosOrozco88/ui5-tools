<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ui5tools.controller.apps" displayBlock="true" width="100%" height="100%">
    <Page showHeader="false" enableScrolling="false">

        <HBox width="100%" height="100%" renderType="Bare">
            <HBox width="calc(100% - 30%)" height="100%" renderType="Bare">
                <Page title="Workspace Apps">
                    <Panel headerText="Applications: {= ${ui5tools>/ui5Apps/application}.length}" expanded="true" expandable="true" visible="{= ${ui5tools>/ui5Apps/application}.length > 0}">
                        <HBox items="{path:'ui5tools>/ui5Apps/application',sorter:{path: 'folderName'}}" wrap="Wrap">
                            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{ui5tools>folderName}" subheader="{ui5tools>namespace}" sizeBehavior="Small" press="pressTile"></GenericTile>
                        </HBox>
                    </Panel>
                    <Panel headerText="Components: {= ${ui5tools>/ui5Apps/component}.length}" expanded="true" expandable="true" visible="{= ${ui5tools>/ui5Apps/component}.length > 0}">
                        <HBox items="{path:'ui5tools>/ui5Apps/component',sorter:{path: 'folderName'}}" wrap="Wrap">
                            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{ui5tools>folderName}" subheader="{ui5tools>namespace}" sizeBehavior="Small" press="pressTile"></GenericTile>
                        </HBox>
                    </Panel>
                    <Panel headerText="Cards: {= ${ui5tools>/ui5Apps/card}.length}" expanded="true" expandable="true" visible="{= ${ui5tools>/ui5Apps/card}.length > 0}">
                        <HBox items="{path:'ui5tools>/ui5Apps/card',sorter:{path: 'folderName'}}" wrap="Wrap">
                            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{ui5tools>folderName}" subheader="{ui5tools>namespace}" sizeBehavior="Small" press="pressTile"></GenericTile>
                        </HBox>
                    </Panel>
                    <Panel headerText="Libraries: {= ${ui5tools>/ui5Apps/library}.length}" expanded="true" expandable="true" visible="{= ${ui5tools>/ui5Apps/library}.length > 0}">
                        <HBox items="{path:'ui5tools>/ui5Apps/library',sorter:{path: 'folderName'}}" wrap="Wrap">
                            <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{ui5tools>folderName}" subheader="{ui5tools>namespace}" sizeBehavior="Small"></GenericTile>
                        </HBox>
                    </Panel>
                </Page>

            </HBox>
            <HBox width="30%" height="100%" renderType="Bare">
                <mvc:XMLView viewName="ui5tools.view.sponsors" />
            </HBox>
        </HBox>
    </Page>
</mvc:View>