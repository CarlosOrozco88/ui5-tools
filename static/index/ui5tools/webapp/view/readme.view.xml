<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    width="100%"
    height="100%">
    <Page title="Readme">
        <VBox width="100%" class="markdown-body paper">
            <core:HTML content="{ui5tools>/readme}"
                visible="{= ${ui5tools>/readme}.length > 0}" />
            <Text text="Workspace without README.md"
                visible="{= ${ui5tools>/readme}.length === 0}"
                width="100%"
                textAlign="Center" />
        </VBox>
    </Page>
</mvc:View>
