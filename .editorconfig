# see http://editorconfig.org

root = true

[*]
charset = utf-8

[*.{css,html,js,json,less}]
trim_trailing_whitespace = true
end_of_line = lf
tab_width = 2
insert_final_newline = true

# npm is using 2 spaces when modifying package.json
[package.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
