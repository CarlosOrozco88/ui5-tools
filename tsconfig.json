{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": [ "ES2020.Promise","ES2020" ],
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"webpack.config.js",
		"runtime"
	]
}
