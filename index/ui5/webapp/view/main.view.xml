<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="ui5tools.controller.main"
    displayBlock="true"
    width="100%"
    height="100%">
    <Page>
    <customHeader>
        <Toolbar width="100%">
            <content>
                <Title text="{ui5tools>/serverName}" />
                <ToolbarSpacer />
                <Button type="Emphasized" press="navToFLP" text="Launchpad" />
            </content>
        </Toolbar>
    </customHeader>
        <content>
            <IconTabBar expandable="false" tabDensityMode="Compact" applyContentPadding="false" selectedKey="logs">
                <items>
                    <IconTabFilter count="{= ${ui5tools>/folders}.length }"
                                    icon="sap-icon://grid"
                                    iconColor="Neutral"
                                    iconDensityAware="true"
                                    key="apps"
                                    text="Apps">
                        <VBox renderType="Bare" height="20rem" width="100%">
                            <HBox items="{ui5tools>/folders}">
                                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{ui5tools>}"
                                    subheader="" press="pressTile">
                                </GenericTile>
                            </HBox>
                        </VBox>
                    </IconTabFilter>
                    <IconTabFilter  icon="sap-icon://document-text"
                                    iconColor="Neutral"
                                    iconDensityAware="true"
                                    key="readme"
                                    text="Readme">
                                    
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <Toolbar width="100%">
                <Link text="ui5-tools"
                    href="https://marketplace.visualstudio.com/items?itemName=carlosorozcojimenez.ui5-tools"
                    target="_blank" 
                    />
                <Link text="Github" 
                    href="https://github.com/CarlosOrozco88/ui5-tools"
                    target="_blank" 
                    />
                <Link text="Issues" 
                    href="https://github.com/CarlosOrozco88/ui5-tools/issues"
                    target="_blank" 
                    />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
